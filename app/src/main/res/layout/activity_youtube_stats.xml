<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".youtube_stats"
    android:background="@color/background">




    <com.airbnb.lottie.LottieAnimationView


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:id="@+id/lottie"
        android:layout_marginTop="20dp"

        android:layout_width="300dp"
        android:layout_height="350dp"
        app:lottie_rawRes="@raw/youtube_jason"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        ></com.airbnb.lottie.LottieAnimationView>


    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lottie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
       
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:textColor="@color/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel Name: "
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"></TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clever Coder"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:id="@+id/title"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="       Channel ID:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor"
                    android:layout_marginLeft="20dp"
                    ></TextView>


                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="UCbzkA8Lu_mBzXSQHEr4gLEA"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    ></TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor"
                    android:layout_marginLeft="38dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Views:"></TextView>


                <TextView
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="----"
                    android:textSize="20sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Subscriber:"
                    android:textSize="20sp"
                    android:layout_marginLeft="6dp"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor"></TextView>

                <TextView
                    android:id="@+id/subs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    ></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Videos:"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor"></TextView>

                <TextView
                    android:id="@+id/video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    ></TextView>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Open Youtube Channel"
        android:layout_marginBottom="50dp"
        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>