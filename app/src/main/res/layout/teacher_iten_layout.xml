<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingLeft="12dp"
                android:orientation="vertical"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacheranme"
                    android:text="Utkarsah Raj Mishra"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherpost2"
                    android:text="HOD"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"></TextView>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacheremail2"
                    android:text="utkarshrajmishra@gmail.com"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"></TextView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/teaxherupdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Info"
                    android:layout_marginVertical="4dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
></com.google.android.material.button.MaterialButton>




            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/teacherphoto2"
                android:layout_width="80dp"
                android:padding="10dp"
                android:layout_height="100dp"
                android:src="@drawable/teacher"
                android:layout_weight="0.5"
                android:layout_gravity="center_horizontal"></de.hdodenhof.circleimageview.CircleImageView>


        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>